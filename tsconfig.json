{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "types/gtag.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "libs/remark-plugins/all.js",
    "libs/remark-plugins/one.js"
  ],
  "exclude": ["node_modules"]
}
